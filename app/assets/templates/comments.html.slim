ul.comments-list
  li.comment(ng-repeat="comment in comments track by comment.github_id" ng-init="commit = comment.commit_data")
    .comment-proper
      .comment-proper-author
        img.comment-proper-author-gravatar gravatar-src="comment.author_email" ng-show="comment.author_email"
        '
        strong= "{{comment.author_name}}"
        '
        span am-time-ago="comment.timestamp" title="{{comment.timestamp}}"
        '
        ' on
        span.known-commit ng-show="commit"
          strong
            ' {{commit.author_name}}'s
          em
            ' "{{commit.summary}}"
        span.unknown-commit ng-hide="commit"
          strong
            ' {{comment.commit_sha}}

        a.comment-proper-link(href="{{comment.url}}" fluid-app-link) View
      .comment-proper-body
        ' {{comment.body}}
