ul.commits-list
  li(ng-repeat="commit in commits | orderBy:short_sha track by commit.short_sha" ng-class="{ 'your-last-clicked-commit': state.currentCommit == commit }")
    img gravatar-src="commit.author_email"
    '
    a href="{{commit.url}}" ng-click="state.currentCommit = commit" target="_blank"
      | {{commit.short_sha}}
    '
    ' {{commit.summary}}
