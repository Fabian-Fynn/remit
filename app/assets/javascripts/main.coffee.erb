window.app = angular.module("Remit", [ "ngRoute", "ui.gravatar", "emoji" ])

app.config ($routeProvider) ->
  $routeProvider.
    when("/",
      templateUrl: "<%= asset_path("welcome.html") %>"
      controller: "HomeCtrl"
    ).
    when("/commits",
      templateUrl: "<%= asset_path("commits.html") %>"
      controller: "CommitsCtrl"
    ).
    when("/comments",
      templateUrl: "<%= asset_path("comments.html") %>"
      controller: "CommentsCtrl"
    ).
    when("/settings",
      templateUrl: "<%= asset_path("settings.html") %>"
      controller: "SettingsCtrl"
    )

angular.module("ui.gravatar").config (gravatarServiceProvider) ->
    gravatarServiceProvider.secure = true  # https
    gravatarServiceProvider.defaults =
      size: 40
